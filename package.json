{
  "name": "summary-stats",
  "version": "1.0.0",
  "description": "summary stats for employees",
  "keywords": [
    "express",
    "typescript",
    "stats"
  ],
  "author": "atulverma",
  "license": "ISC",
  "main": "build/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "nodemon",
    "start": "npm run build && node build/index.js",
    "lint": "eslint --ext .ts ./src",
    "lint:fix": "eslint --ext .ts ./src --fix",
    "prettier": "prettier --check src/**/*.ts",
    "prettier:format": "prettier src/**/*.ts --write",
    "test:unit": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules  jest --coverage --watchAll",
    "test": "npm run lint:fix && npm run test:unit",
    "prepare": "husky install"
  },
  "dependencies": {
    "@types/nanoid": "^3.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.2",
    "express": "^4.18.1",
    "helmet": "^6.0.0",
    "nanoid": "^4.0.0",
    "pino": "^8.5.0",
    "pino-http": "^8.2.0",
    "qs": "^6.11.0",
    "typescript": "^4.8.2"
  },
  "devDependencies": {
    "@tsconfig/node16": "^1.0.3",
    "@types/cors": "^2.8.12",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^28.0.0",
    "@types/node": "^16.0.0",
    "@types/pino-http": "^5.8.1",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.36.2",
    "@typescript-eslint/parser": "^5.36.2",
    "eslint": "^8.23.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "jest": "^28.0.0",
    "nodemon": "^2.0.19",
    "pino-pretty": "^9.1.0",
    "prettier": "^2.7.1",
    "supertest": "^6.2.4",
    "ts-jest": "^28.0.8",
    "ts-node": "10.8.2",
    "tsconfig-paths": "^4.1.0"
  }
}
